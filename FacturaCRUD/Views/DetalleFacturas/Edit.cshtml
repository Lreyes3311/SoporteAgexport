@model FacturaCRUD.Models.DetalleFactura

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>DetalleFactura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Producto" class="control-label"></label>
                <input asp-for="Producto" class="form-control" />
                <span asp-validation-for="Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoTotalLinea" class="control-label"></label>
                <input asp-for="MontoTotalLinea" class="form-control" />
                <span asp-validation-for="MontoTotalLinea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacturaId" class="control-label"></label>
                <select asp-for="FacturaId" class="form-control" asp-items="ViewBag.FacturaId"></select>
                <span asp-validation-for="FacturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
